<div class="login-form-page">
  <div class="login-form-box">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"text-left" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"text-left" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"w-100" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field d-flex justify-content-center align-items-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"mb-0 ml-1" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>