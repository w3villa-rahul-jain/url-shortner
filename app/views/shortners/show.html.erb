<div class="outer-box">
<div class="show-box">
<p id="notice"><%= notice %></p>

<p>
  <strong>Original url:</strong>
  <%= @shortner.original_url %>
</p>

<p>
  <strong>Short url:</strong>
  <%= @shortner.short_url %>
</p>

<span>Click Here  : <%= link_to  @short_url ,click_count_path(url: @short_url), method: :post %></span  >


